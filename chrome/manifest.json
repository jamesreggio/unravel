{
  "manifest_version": 2,
  "name": "Unravel",
  "version": "0.0.2",
  "description": "Extracts a plaintext crash from Twitter Fabric (Crashlytics)",
  "author": "James Reggio <james.reggio@gmail.com> (http://regg.io)",
  "homepage_url": "https://github.com/jamesreggio/unravel",
  "permissions": [
    "https://fabric.io/",
    "clipboardWrite",
    "tabs"
  ],
  "background": {
    "scripts": ["lib/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "19": "img/icon-disabled-19.png",
      "38": "img/icon-disabled-38.png"
    }
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  }
}
